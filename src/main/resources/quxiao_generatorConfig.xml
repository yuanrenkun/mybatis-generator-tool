<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE generatorConfiguration PUBLIC "-//mybatis.org//DTD MyBatis Generator Configuration 1.0//EN"
    "http://mybatis.org/dtd/mybatis-generator-config_1_0.dtd" >
<generatorConfiguration>
    <!-- 如果驱动在classpath下，例如通过maven依赖进来，则可以不在这里指定驱动位置 -->
    <classPathEntry
        location="l"/>
    <context id="context1" targetRuntime="MyBatis3" introspectedColumnImpl="com.generator.plugin.MyIntrospectedColumn">
        <property name="javaFileEncoding" value="UTF-8"/>
        <plugin type="org.mybatis.generator.plugins.SerializablePlugin"/>
        <plugin type="org.mybatis.generator.plugins.RenameExampleClassPlugin">
            <property name="searchString" value="Example$"/>
            <property name="replaceString" value="Condition"/>
        </plugin>
        <plugin type="com.generator.plugin.RenameExampleAndPrimaryKeyPlugin"/>
        <plugin type="com.generator.plugin.MysqlPagingPlugin"/>
        <plugin type="com.generator.plugin.TinyintToIntegerPlugin"/>
        <plugin type="com.generator.plugin.CommentPlugin">
            <!-- 制定java bean的作者，默认情况下会读取计算机当前用户作为作者 -->
            <property name="modelClassAuthor" value="quxiao"/>
        </plugin>

        <commentGenerator>
            <!-- 不生成原生的注解信息 -->
            <property name="suppressAllComments" value="true"/>
        </commentGenerator>
        <jdbcConnection driverClass="com.mysql.jdbc.Driver"
                        connectionURL="jdbc:mysql://127.0.0.1:3306/startup-service?useUnicode=true&amp;characterEncoding=UTF-8&amp;autoReconnect=true&amp;generateSimpleParameterMetadata=true" userId="root"
                        password=""/>

        <javaTypeResolver>
            <property name="forceBigDecimals" value="false"/>
        </javaTypeResolver>

        <javaModelGenerator targetPackage="com.kr.chuang.model"
                            targetProject="D:\code">
            <property name="enableSubPackages" value="true"/>
            <property name="trimStrings" value="true"/>
        </javaModelGenerator>

        <sqlMapGenerator targetPackage="com.kr.chuang.mapper"
                         targetProject="D:\code" />

        <javaClientGenerator targetPackage="com.kr.chuang.mapper"
                             targetProject="D:\code" type="XMLMAPPER"/>


        <table tableName="%" >
            <!--<property name="useActualColumnNames" value="true"/>-->
            <generatedKey column="id" identity="true" sqlStatement="mysql"/>
        </table>

    </context>
</generatorConfiguration>
